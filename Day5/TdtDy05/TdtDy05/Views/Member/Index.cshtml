@model IEnumerable<TdtDy04.Models.DataModels.Member>
@{
    ViewData["Title"] = "Danh sách thành viên";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Giả sử có layout
}

<h2>Danh sách thành viên</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<a asp-action="Create" class="btn btn-primary mb-3">Thêm thành viên mới</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.MemberId)</th>
            <th>@Html.DisplayNameFor(model => model.Username)</th>
            <th>@Html.DisplayNameFor(model => model.Fullname)</th>
            <th>@Html.DisplayNameFor(model => model.Password)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MemberId.Substring(0, 8)...</td>
                <td>@item.Username</td>
                <td>@item.Fullname</td>
                <td>@item.Password</td>
                <td>@item.Email</td>
            </tr>
        }
    </tbody>
</table>